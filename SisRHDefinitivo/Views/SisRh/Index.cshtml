<link href="~/css/Login.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">

@model SisRHDefinitivo.Adm.Models.LoginModel

@{
    ViewBag.Title = "Login SisRH";
}

@using (
  Html.BeginForm("Login",
                 "SisRh",
                 FormMethod.Post))
{
    //cria a tag do formulário
    @Html.AntiForgeryToken()
    // previne o ataque CSRF
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div style="border:1px solid red">
            @ViewBag.Message
        </div>
    }
    <div class="login-dark">
    <h2 class="sr-only">Login</h2>
        <div class="illustration col-xs-12 col-sm-12 col-md-3"><i class="icon ion-ios-locked-outline"></i></div>

        <div class="form-group col-xs-12 col-sm-12 col-md-3" id="id_login">
                    @(Html.TextBoxFor(m => m.id_login, htmlAttributes: new { @class = "form-control", @placeholder ="User" }))
                </div>

        <div class="form-group col-xs-12 col-sm-12 col-md-3" id="senha_login">
                @Html.PasswordFor(login => login.senha_login, htmlAttributes: new { @class = "form-control",  @placeholder ="Senha" })
                @Html.ValidationMessageFor(login => login.senha_login)
            </div>

        <div class="form-group col-xs-12 col-sm-12 col-md-2" id="btnLogin">
            <input class="btn btn-primary btn-block" type="submit" value="Login" /> 
        </div>
        <div class="form-group col-xs-12 col-sm-12 col-md-1">
            <a href="#" class="forgot">Esqueceu o usuário ou a senha?</a>
        </div>
    </div>

    
    @*  @section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
  *@
}



