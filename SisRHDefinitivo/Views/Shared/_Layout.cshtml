<!DOCTYPE html>
<html lang="en">

<style>

    body{
        background: linear-gradient(to right, black, rgb(16, 16, 16),black);
    }

</style>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SisRH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/NavPrincipal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SisRHDefinitivo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
</head>
<body>
    <style>
        .lkzaul {
            color: rgb(28, 218, 255)
        }

    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3" style="border-bottom: 1px groove rgb(28, 218, 255) !important;">
            <div class="container-fluid">
                @* <img src="~/Imagens/logo.png" asp-controller="SisRh" alt="some text" width=120 height=99> *@
                <img src="~/css/whatsapp image 2023-10-23 at 22.00.24.jpeg" alt="SisRh" width=120 height=99 />

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link hoverable" style="color:rgb(28, 218, 255)" asp-area="" asp-controller="SisRh" asp-action="Index">SisRh</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hoverable" style="color:rgb(28, 218, 255)" asp-area="" asp-controller="Funcionario" asp-action="New">Cadastro Funcionario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link hoverable" style="color:rgb(28, 218, 255)" asp-area="" asp-controller="Apontamento" asp-action="ConsultarFolhaPonto">Consultar Folha Ponto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SISRH - <a asp-area="" asp-controller="SisRh" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
