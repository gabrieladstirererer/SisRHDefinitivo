@model SisRHDefinitivo.Mvc.Adm.ViewModels.Funcionario.EditViewModel

<link href="~/css/Funcionario.css" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
<fieldset class="scheduler-border">
    <legend class="scheduler-border" style="font-size: 30px;">
        <i class="bi bi-pen"></i><b>Edição de Funcionarios</b>
    </legend>
    <fieldset class="scheduler-border">
        <legend class="scheduler-border" style="font-size : 15px">
            <b><i>Dados Pessoais</i></b>
        </legend>
        <div class="row" style="width: -15px;">
            <div class="col-xs-12 col-sm-4 col-md-4" id="NM_Funcionario">
                @(Html.LabelFor(m => m.Funcionario.primeiro_nm_func, new { @class = "control-label" }))
                @(Html.TextBoxFor(m => m.Funcionario.primeiro_nm_func, htmlAttributes: new { @placeholder = "Nome", @class = "form-control" }))
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="SB_Funcionario">
                @(Html.LabelFor(m => m.Funcionario.sobre_nm_func, new { @class = "control-label" }))
                @(Html.TextBoxFor(m => m.Funcionario.sobre_nm_func, htmlAttributes: new { @placeholder = "Sobrenome", @class = "form-control" }))
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="ULT_Nome">
                @Html.LabelFor(m => m.Funcionario.ultimo_nm_func, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Funcionario.ultimo_nm_func, htmlAttributes: new { @placeholder = "Ultimo Nome", @class = "form-control" })
            </div>
        </div>
        <div class="row" style="width: -15px;">
            <div class="col-xs-12 col-sm-4 col-md-4" id="DT_Nascimento">
                @(Html.LabelFor(m => m.Funcionario.dt_nasc_func, new { @class = "control-label" }))
                @(Html.TextBoxFor(m => m.Funcionario.dt_nasc_func, htmlAttributes: new { @placeholder = "dd/mm/yyyy", @class = "form-control" }))
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="RC_Funcionario">
                @(Html.LabelFor(m => m.Funcionario.raca_func, new { @class = "control-label" }))
                @(Html.TextBoxFor(m => m.Funcionario.raca_func, htmlAttributes: new { @placeholder = "Raça", @class = "form-control" }))
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="DS_Sangue">
                @Html.LabelFor(m => m.Funcionario.ultimo_nm_func, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Funcionario.ultimo_nm_func, htmlAttributes: new { @placeholder = "Tipo Sanguineo", @class = "form-control" })
            </div>
        </div>
        <div class="row" style="width: -15px;">
            <div class="col-xs-12 col-sm-4 col-md-4" id="NM_Mae">
                @(Html.LabelFor(m => m.Funcionario.nm_mae_func, new { @class = "control-label" }))
                @(Html.TextBoxFor(m => m.Funcionario.nm_mae_func, htmlAttributes: new { @placeholder = "Nome Mãe", @class = "form-control" }))
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="NM_Pai">
                @(Html.LabelFor(m => m.Funcionario.nm_pai_func, new { @class = "control-label" }))
                @(Html.TextBoxFor(m => m.Funcionario.nm_pai_func, htmlAttributes: new { @placeholder = "Nome Pai", @class = "form-control" }))
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="DS_Estado_CV">
                @Html.LabelFor(m => m.Funcionario.estado_civil_func, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Funcionario.estado_civil_func, htmlAttributes: new {@placeholder = "Estado Civil", @class = "form-control" })
            </div>
        </div>
    </fieldset>
    <fieldset class="scheduler-border">
        <legend class="scheduler-border" style="font-size : 15px">
            <b><i>Endereço</i></b>
        </legend>
        <div class="row" style="width: -15px;">
            <div class="col-xs-12 col-sm-4 col-md-4" id="NUM_Residencia">
                @Html.LabelFor(m => m.Funcionario.numero_resr_func, new  {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.numero_resr_func,htmlAttributes: new {@placeholder = "N° Residência", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="DS_Email">
                @Html.LabelFor(m => m.Funcionario.email_func, new { @class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.email_func, htmlAttributes: new { @placeholder ="Exemplo@gmail.com", @class = "form-control"})
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="CEL_Funcionario">
                @Html.LabelFor(m => m.Funcionario.celular_func, new  {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.celular_func,htmlAttributes: new {@placeholder = "(+55) 00-00000-0000", @class = "form-control" })
            </div>
        </div>
        <div class="row" style="width: -15px;">
            <div class="col-xs-12 col-sm-4 col-md-4" id="Whats_Funcionario">
                @Html.LabelFor(m => m.Funcionario.whatsapp_fun, new  {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.whatsapp_fun,htmlAttributes: new {@placeholder = "(+55) Whatsaap", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="TEL_Func">
                @Html.LabelFor(m => m.Funcionario.telefone_func, new  {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.telefone_func,htmlAttributes: new {@placeholder = "Telefone Fixo", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="DS_cidade">
                @Html.LabelFor(m => m.Funcionario.DS_cidadae, new  {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.DS_cidadae,htmlAttributes: new {@placeholder = "Cidade", @class = "form-control" })
            </div>
        </div>
        <div class="row" style="width: -15px;">
            <div class="col-xs-12 col-sm-2 col-md-2" id="COMP_Funcionario">
                @Html.LabelFor(m => m.Funcionario.compl_func, new  {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.compl_func,htmlAttributes: new {@placeholder = "Complemento", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8" id="Ponto_Referencia">
                @Html.LabelFor(m => m.Funcionario.ponto_referencia, new  {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.ponto_referencia,htmlAttributes: new {@placeholder = "Casa, Rua, Ponto Turístico", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2" id="TP_Moradia">
                @Html.LabelFor(m => m.Funcionario.tipo_moradia_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.tipo_moradia_func, htmlAttributes : new {@placeholder = "DropDown", @class = "form-control" })
            </div>
        </div>
    </fieldset>
    <fieldset class="scheduler-border">
        <legend class="scheduler-border" style="font-size : 15px">
            <b><i>Documentos Admissão</i></b>
        </legend>
        <div class="row" style="width: -15px;">
            <div class="col-xs-12 col-sm-12 col-md-12" id="DS_CPF">
                @Html.LabelFor(m => m.Funcionario.email_corp_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.email_corp_func, htmlAttributes : new {@placeholder = "User.Login@gmail.sp.gov.br", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2" id="DS_CPF">
                @Html.LabelFor(m => m.Funcionario.cpf_funk, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.cpf_funk, htmlAttributes : new {@placeholder = "000-000.000-00", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2" id="DS_Rg">
                @Html.LabelFor(m => m.Funcionario.rg_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.rg_func, htmlAttributes : new {@placeholder = "00.000.000-0", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2" id="ORG_Emissor">
                @Html.LabelFor(m => m.Funcionario.orgao_emissor_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.orgao_emissor_func, htmlAttributes : new {@placeholder = "Orgão Emissor", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2" id="RES_Funcionario">
                @Html.LabelFor(m => m.Funcionario.reservista_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.reservista_func, htmlAttributes : new {@placeholder = "000.000", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="DS_Titulo">
                @Html.LabelFor(m => m.Funcionario.titulo_eleitor_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.titulo_eleitor_func, htmlAttributes : new {@placeholder = "000.000.000.000", @class = "form-control" })
            </div>
        </div>
        <div class="row" style="width: -15px;">
            <div class="col-xs-12 col-sm-2 col-md-2" id="DS_Zona_Eleitoral">
                @Html.LabelFor(m => m.Funcionario.zona_eleitor_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.zona_eleitor_func, htmlAttributes : new {@placeholder = "000", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2" id="DS_Sessao_Eleitor">
                @Html.LabelFor(m => m.Funcionario.sessao_eleitor_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.sessao_eleitor_func, htmlAttributes : new {@placeholder = "000", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2" id="DT_Emissao">
                @Html.LabelFor(m => m.Funcionario.dt_emissao_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.dt_emissao_func, htmlAttributes : new {@placeholder = "dd/mm/yyyy", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-1 col-md-1" id="DS_CNS">
                @Html.LabelFor(m => m.Funcionario.cns_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.cns_func, htmlAttributes : new {@placeholder = "CNS", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-2 col-md-2" id="DS_Zona_Eleitoral">
                @Html.LabelFor(m => m.Funcionario.zona_eleitor_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.zona_eleitor_func, htmlAttributes : new {@placeholder = "000", @class = "form-control" })
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3" id="DS_Cidade_Eleitoral">
                @Html.LabelFor(m => m.Funcionario.cidade_eleitor_func, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.Funcionario.cidade_eleitor_func, htmlAttributes : new {@placeholder = "Cidade Eleitoral", @class = "form-control" })
            </div>
        </div>
    </fieldset>
    <fieldset class="scheduler-border">
        <legend class="scheduler-border">
            <b>Arquivos</b>
        </legend>
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4" id="DS_Comprovante_Residencia">
                @Html.LabelFor(m => m.Funcionario.cert_casamento_func, new {@class = "control-label"})
                <input type="file" id="file-right" placeholder="Arquivo" />
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="CERT_Nas">
                @Html.LabelFor(m => m.Funcionario.cert_nasc_func, new {@class = "control-label"})
                <input type="file" id="file-open" placeholder="Arquivo" />
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4" id="CERT_Casa">
                @Html.LabelFor(m => m.Funcionario.comprovante_res_func, new {@class = "control-label"})
                <input type="file" id="file-close" placeholder="Arquivo" />
            </div>
        </div>
    </fieldset>
</fieldset>
<div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4" id="c">
        <a id="subGravarFuncionario" class="btn btn-labeled btn-primary" href="javascript:submitGravar();">
            <span class="btn-label" onclick="submit()"><i class="bi bi-0-circle"></i></span><b>Gravar</b>
        </a>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4" id="ID_Botao">
        <a href="@Url.Action("Index")" class="btn btn-labeled btn-primary"> <span class="btn-label"><i class="bi bi-0-circle"></i></span>Voltar</a>
    </div>
</div>